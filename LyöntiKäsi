

import lejos.robotics.RegulatedMotor;
import lejos.utility.Delay;

public class Lyöntikäsi {
	RegulatedMotor käsi;
	int nopeus;

	public Lyöntikäsi(RegulatedMotor käsi) {
		this.käsi = käsi;
		nopeus = 900;
		käsi.setSpeed(nopeus);
	}

	public void setNopeus(int nopeusvalinta) {
		käsi.setSpeed(nopeusvalinta);

	}

	public void vaihdaNopeus() {
		if (nopeus == 900) {
			nopeus = 500;
			käsi.setSpeed(nopeus);
		}
		if (nopeus == 500){
			nopeus = 900;
			käsi.setSpeed(nopeus);
		}
	}

	public void oletusasentoon() {
		Delay.msDelay(1000);
		käsi.setSpeed(100);
		käsi.rotateTo(0);
		käsi.setSpeed(nopeus);
	}

	public void lyö() {
		käsi.rotate(120);
		 oletusasentoon();
		
		
		
	}

}
